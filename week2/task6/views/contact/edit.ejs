<!-- Update Contact View -->
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card mt-4">
                <div class="card-body">
                    <h2 class="card-title mb-4">Update Contact</h2>
                    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <strong>Kesalahan Validasi:</strong>
                            <ul>
                                <% errors.forEach(error => { %>
                                    <li><%= error.msg %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                    <form method="POST" action="/contact/<%= data.name %>/update?_method=PUT">
                        <div class="form-group">
                            <label for="contactName">Nama:</label>
                            <input type="text" class="form-control" id="contactName" name="name" value="<%= data.name %>">
                        </div>
                        <div class="form-group">
                            <label for="contactPhone">Nomor Telepon:</label>
                            <input type="text" class="form-control" id="contactPhone" name="phone" value="<%= data.phone %>">
                        </div>
                        <div class="form-group">
                            <label for="contactEmail">Email:</label>
                            <input type="email" class="form-control" id="contactEmail" name="email" value="<%= data.email %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                        <a href="/contact" class="btn btn-warning text-white">Kembali</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
