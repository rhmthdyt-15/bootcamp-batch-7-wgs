<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="card-title m-0">Update Contact</h5>
                </div>
                <div class="card-body">
                    <form action="/update-contact" method="POST">
                        <input type="hidden" name="oldname" value="<%= data.name %>">
                        <div class="form-group">
                            <label for="contactName">Nama:</label>
                            <input type="text" class="form-control" id="contactName" name="name" value="<%= data.name %>" required>
                        </div>
                        <div class="form-group">
                            <label for="contactPhone">Nomor Telepon:</label>
                            <input type="text" class="form-control" id="contactPhone" name="phone" value="<%= data.phone %>" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="contactEmail">Email:</label>
                            <input type="email" class="form-control" id="contactEmail" name="email" value="<%= data.email %>" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a href="/" class="btn btn-secondary">Kembali</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>